<widget_description>

    <widget name="Parents" factory="pawsCharParents" 
            visible="no" movable="no" resizable="no" resizetoscreen="yes" >
        <frame x="0" y="0" width="800" height="600" border="no" />
	<font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="15" resizetoscreen="yes" />
        <bgimage resource="Charparents Background" />
   
        <!-- Title -->
        <widget name="label_parents" factory="pawsTextBox">
            <frame x="230" y="10" width="350" height="40" border="no"/>
	    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="26" resizetoscreen="yes" />
            <text string="PARENTS" horizAdjust="CENTRE" />
        </widget>
        
        <!-- CP -->
        <widget name="CP" factory="pawsTextBox">
            <frame x="695" y="133" width="70" height="30" border="no" />
	    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="15" resizetoscreen="yes" />
            <text string="" horizAdjust="CENTRE" />
        </widget> 
     
        <!-- Randomize button -->   
        <widget name="randomize" factory="pawsButton">
            <frame x="693" y="210" width="75" height="30" border="no" />
	    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="13" resizetoscreen="yes" />
        <label text="Randomize"/>
        </widget>

        <!-- Father Name -->
        <widget name="label_father" factory="pawsTextBox">
            <frame x="140" y="150" width="150" height="30" border="no"/>
	    <font name="/planeshift/data/ttf/cupandtalon.ttf"  r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="18" resizetoscreen="yes" />
            <text string="Father Name:" />
        </widget>
        
        <widget name="fname" factory="pawsEditTextBox">
            <frame x="120" y="184" width="150" height="30" border="no"/>
        </widget>

        <!-- Father Status -->
        <widget name="fstatus" factory="pawsRadioButtonGroup" >
            <frame x="80" y="225" width="220" height="90" border="no" />
	    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="14" resizetoscreen="yes" />
            <radio on="radioon2" off="radiooff2" size="32"/>
                        
            <widget name="FNormal" factory="pawsRadioButton">
                <frame x="5" y="15" width="60" height="100" border="no" />
                <text string="Normal" position="underneath"/>
            </widget>
            
            <widget name="FFamous" factory="pawsRadioButton">
                <frame x="70" y="0" width="70" height="100" />
                <text string="Famous" position="above"/>
            </widget>
            
            <widget name="FExceptional" factory="pawsRadioButton">
                <frame x="125" y="15" width="90" height="100" />
                <text string="Exceptional" position="underneath" />
            </widget>
        </widget>
        
        <!-- Father Job -->  
        <widget name="text" factory="pawsTextBox" >
            <frame x="345" y="148" width="80" height="30" />
	    <font name="/planeshift/data/ttf/cupandtalon.ttf"  r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="18" resizetoscreen="yes" />
            <text string="Job:" />
        </widget>
        
        <widget name="fjobdesc" factory="pawsMultiLineTextBox"  >
            <frame x="520" y="158" width="160" height="150" border="no" />
	    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="13" />
            <text string="Select the job your father has" />
        </widget>
        
        <widget name="fatherjobs" factory="pawsListBox" id="1000" >
            <frame x="345" y="168" width="140" height="130" border="no" />
	    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="13" resizetoscreen="yes" />
            <scrollbar arrowup="Up Arrow" arrowdown="Down Arrow" arrowsize="8" width="15"  border="no"/>
            <highlight resource="Highlight" />
            <columns height="20">
                <column width="120" >
                    <widget name="" factory="pawsTextBox"></widget>
                </column>
            </columns>
        </widget>

        <!-- Mother Name -->   
        <widget name="mlabel" factory="pawsTextBox">
            <frame x="140" y="341" width="150" height="30" border="no"/>
	    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="18" resizetoscreen="yes" />
            <text string="Mother Name:" />
        </widget>
                
        <widget name="mname" factory="pawsEditTextBox">
            <frame x="120" y="376" width="150" height="30" border="no"/>
        </widget>
        
        <!-- Mother Status -->    
        <widget name="mstatus" factory="pawsRadioButtonGroup" >
            <frame x="110" y="415" width="200" height="90" border="no" />
	    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="14" resizetoscreen="yes" />
            <radio on="radioon2" off="radiooff2" size="32"/>
                            
            <widget name="MNormal" factory="pawsRadioButton">
                <frame x="10" y="5" width="60" height="100" border="no" />
                <text string="Normal" position="above"/>
            </widget>
            
            <widget name="MFamous" factory="pawsRadioButton">
                <frame x="65" y="20" width="70" height="100" />
                <text string="Famous" position="underneath"/>
            </widget>
            
            <widget name="MExceptional" factory="pawsRadioButton">
                <frame x="110" y="5" width="90" height="100" />
                <text string="Exceptional" position="above"/>
            </widget>
        </widget>
        
        <!-- Mother Job -->
        <widget name="text" factory="pawsTextBox" >
            <frame x="345" y="341" width="80" height="30" />
	    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="18" resizetoscreen="yes" />
            <text string="Job:" />
        </widget>
        
        <widget name="mjobdesc" factory="pawsMultiLineTextBox"  >
            <frame x="520" y="330" width="160" height="150" border="no" />
	    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="13" />
            <text string="Select the job your mother has" />
        </widget>
 
        <widget name="motherjobs" factory="pawsListBox" id="2000" >
            <frame x="345" y="360" width="140" height="130" border="no" />
	    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="13" resizetoscreen="yes" />
            <scrollbar arrowup="Up Arrow" arrowdown="Down Arrow" arrowsize="8" width="15"  border="no"/>
            <highlight resource="Highlight" />
            <columns height="20">
                <column width="120" >
                    <widget name="" factory="pawsTextBox"></widget>
                </column>
            </columns>
        </widget>

        <!-- Religion Select -->      
        <widget name="text" factory="pawsTextBox">
            <frame x="373" y="497" width="100" height="20" />
	    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="15" resizetoscreen="yes" />
            <text string="Religion:" />
        </widget>
           
        <widget name="Religions" factory="pawsListBox" id="4000">
            <frame x="265" y="530" width="75" height="60" border="no" />
	    <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="13" resizetoscreen="yes" />
            <scrollbar arrowup="Up Arrow" arrowdown="Down Arrow" arrowsize="8" width="15"  border="no"/>
            <highlight resource="Highlight" />
            <columns height="20" headings="no">
                <column width="115" >
                    <widget name="Religion" factory="pawsTextBox"></widget>
                </column>
            </columns>
        </widget>

        <widget name="religiondesc" factory="pawsMultiLineTextBox">
          <frame x="345" y="530" width="275" height="60" border="no" />
	  <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="12" resizetoscreen="yes" />
          <text string="Please select your character's religion."/>
        </widget>
        
         <!-- Navigation Buttons -->
        <widget name="BackButton" factory="pawsButton" id="6000">
            <frame x="30" y="503" width="80" height="50" border="no" />
	    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="28" resizetoscreen="yes" />
            <label text="Prev"/>
        </widget>

        <widget name="NextButton" factory="pawsButton" id="5000">
            <frame x="699" y="516" width="80" height="55" border="no" />
	    <font name="/planeshift/data/ttf/cupandtalon.ttf" r="255" g="255" b="255" sr="0" sg="0" sb="0" shadow="yes" size="28" resizetoscreen="yes" />
            <label text="Next"/>
        </widget>
        
    </widget>

</widget_description>
