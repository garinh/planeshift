      <locate obj="tribe:home"  static="no" />
      <wander anim="walk" />        <!-- Navigate using waypoints -->
      <navigate anim="walk" />      <!-- Local navigation -->
    </behavior>
    <behavior name="Reproduce" completion_decay="200" growth="0" initial="0">
