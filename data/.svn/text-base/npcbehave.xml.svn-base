      </behavior>
      <behavior name="fight" decay="0" growth="0" initial="0">
	  <locate obj="target"  range="50"/>
          <rotate type="locatedest" anim="walk" ang_vel="120" />
	  <melee seek_range="50" melee_range="3" />
